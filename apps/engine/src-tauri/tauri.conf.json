{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "StarNight Engine",
    "version": "0.1.0",
    "identifier": "starnight.org",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [{
            "title": "StarNight Engine",
            "width": 1280,
            "height": 720,
            "resizable": true,
            "fullscreen": false
        }],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["appimage", "app", "nsis"],
        "icon": [
            "icons/icon.ico",
            "icons/icon.icns",
            "icons/icon.png"
        ]
    }
}